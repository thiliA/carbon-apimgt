              onclick="jagg.sessionAwareJS({redirect:'<%=subsMappedUrl%>?task=application',e:event,ssoEnabled:<%=ssoEnabled%>})">
              <i class="fw fw-application"></i><%=i18n.localize("appCreation")%></a>
            </li>
